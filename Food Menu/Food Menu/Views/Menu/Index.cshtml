@model IEnumerable<Food_Menu.Models.Dish>

@{
    ViewData["Title"] = "Menu";
}

<h2>Menu</h2>
<a asp-action="Create" class="btn btn-primary">Add New Dish</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Price.ToString("N2") Dollars</td>
                <td>
                    <a asp-action="Details" asp-route-id="@dish.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@dish.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@dish.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
